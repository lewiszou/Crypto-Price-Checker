{
    "manifest_version": 2,
    "name": "Crypto Price Checker",
    "description": "Check crypto prices!",
    "version": "1.0.5",
    "icons": {"128": "icon_128.png"},
    "permissions": [
        "https://www.coingecko.com/en/widgets/"
      ],
    "background": {
        "scripts": ["jquery-3.3.1.js", "form.js"],
        "persistent": false
    },  
    "content_security_policy": "script-src 'self' https://widgets.coingecko.com/coingecko-coin-price-marquee-widget.js; object-src 'self'",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],

            "js": [ 
                "jquery-3.3.1.js",
                "form.js" ]
        } 
    ],
    "browser_action": 
    {
        "default_icon": "icon.png",
        "default_popup": "popup.html"

    }


}